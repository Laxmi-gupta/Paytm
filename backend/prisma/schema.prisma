generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name      String?
  email String @unique
  password String
  refreshToken String? @unique
  number String @unique
  OnRampTransaction OnRampTransaction[] 
  Balance Balance?     // 1 user can hv only 1 wallet  

  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt       // automatically updates when something is changed
  ledgerEntries TransactionLedger[]         // Ledger creation must be mandatory and inside the transaction

  sendTransfers P2PTransfer[] @relation("SendTransfers")    // Give  all transfers this user sent
  receivedTransfers P2PTransfer[] @relation("ReceivedTransfers") // Give  all transfers this user sent

  sendIntent TransactionIntent[] @relation("sentIntent")
  receiverIntent TransactionIntent[] @relation("receiverIntent")
}

//adding money from bank   
model OnRampTransaction { // money deposits => paytm wallet add
  id Int @id @default(autoincrement())
  status onRampStatus @default(Processing)
  startTime DateTime
  amount Int 
  provider String      // bank name
  token String @unique 
  userId Int
  user User @relation(fields: [userId], references: [id])

  ledgerEntries TransactionLedger[]
}

model Balance {    // wallet
  id Int @id @default(autoincrement())
  amount Int @default(0)  // available balance
  locked Int   // prevents double spending same money cant be spent twice
  userId Int @unique
  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model P2PTransfer {
  id Int @id @default(autoincrement())
  senderId Int
  sender User @relation("SendTransfers",fields: [senderId], references: [id])
  receiverId Int
  receiver User @relation("ReceivedTransfers",fields: [receiverId], references: [id])
  amount Int 
  status P2PStatus @default(Pending)

  idempotencyKey String? @unique  // Database itself blocks duplicates. Even if two requests hit at same time

  ledgerEntries TransactionLedger[]  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  intentId Int @unique
  intent TransactionIntent @relation(fields: [intentId], references: [id])
}

model TransactionLedger {
  id Int @id @default(autoincrement())
  amount Int
  transactionType TransactionType
  mode TxnMode
  createdAt DateTime @default(now())

  userId Int
  user User @relation(fields: [userId],references: [id])

  p2pTransferLedger Int?
  p2pTransfer P2PTransfer? @relation(fields: [p2pTransferLedger], references: [id])

  onRampTxLedger Int?
  onRampTx OnRampTransaction? @relation(fields: [onRampTxLedger], references: [id])
}

// decisoin engine
model TransactionIntent {
  id Int @id @default(autoincrement())
  senderId Int       // optional for OnRamp
  receiverId Int
  status TransactionStatus
  amount Int

  // Decision metadata (nullable until evaluated)
  riskLevel RiskLevel?
  decisionReason String?
  decidedAt DateTime?

  sender User @relation("sentIntent",fields: [senderId],references: [id])
  receiver User @relation("receiverIntent",fields: [receiverId],references: [id])

  createdAt DateTime @default(now())
  executedAt DateTime?

  type IntentType       // to differentiate onramp or p2p

  p2pTxn P2PTransfer?
  otp TransactionOtp?
}

// mdeium risk otp verification 
model TransactionOtp {
  id String @id @default(uuid())         // for security purpose it kept as string
  otpHash String 
  intentId Int @unique     // â†’ one OTP per intent
  transactionIntent TransactionIntent @relation(fields: [intentId],references: [id])
  createdAt DateTime @default(now())
  expiredAt DateTime 
  attempts Int @default(0)
  verifiedAt DateTime?
}

enum onRampStatus {
  Success
  Failure
  Processing
}

enum P2PStatus {
  Success
  Failure
  Pending
}

enum TransactionType {
  Onramp
  P2P
}

enum TxnMode {
  Credit
  Debit
}

enum TransactionStatus {
  Pending
  Approved
  Blocked
  Executed
  Failed
}

enum IntentType {
  Onramp
  P2P
}

enum RiskLevel {
  Low
  Medium
  High
}